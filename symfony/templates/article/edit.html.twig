{% extends 'admin.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <section class="panel important">
        {% block _title %}
            <h2>Modifier {{ type|capitalize }}</h2>
        {% endblock %}

        {{ form_start(form) }}
        <div class="twothirds">
            {{ form_row(form.title, {'attr': {'placeholder': 'Nom'}}) }}

            {{ form_row(form.content, {'attr': {'rows': 8, 'cols': 40}}) }}

            {{ form_row(form.image) }}
            {% if article.image %}
                <img src="{{ vich_uploader_asset(article.image, 'imageFile') }}" alt="" width="290" />
            {% endif %}

            {% if 'font' in form|keys %}
                {{ form_label(form.font) }}
                {{ form_widget(form.font) }}
                {{ form_help(form.font) }}
            {% endif %}
        </div>
        <div class="onethird d-flex">
            <div class="mt-auto">
                <input type="submit" value="Soumettre" />
            </div>
        </div>
        <div>
            <a class="btn-cs-danger" href="{{ path('article_index_'~type) }}">Annuler</a>
        </div>
        {{ form_end(form) }}
    </section>

    {% if article.id %}
        <div class="text-right">
            {{ include('article/_delete_form.html.twig') }}
        </div>
    {% endif %}
{% endblock %}
