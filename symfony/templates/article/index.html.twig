{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des annonces{% endblock %}

{% block class_body 'admin' %}

{% block body_content %}
    <h4 class="mb-1 mt-1">
        <div class="jumbotron bg-gradient-7">
            <h3 class="display-6">Annonces</h3>
        </div>
    </h4>
    <div class="text-right">
        <a class="btn-primary btn-sm" href="{{ path('article_new') }}">
            <i class="fas fa-plus"></i>
            Nouvelle Annonce
        </a>
    </div>
    <div class="card">
        <div class="card-body">
            <table class="js-datatable table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Titre</th>
                        <th>Crée</th>
                        <th colspan="2">Actions</th>
                        <th>Supprimé</th>
                    </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td title="{{ article.titleTranslator }}">{{ article.title }}</td>
                        <td>{{ article.createdAt|date('d/m/Y à H:m') }}</td>
                        <td>
                            <a href="{{ path('article_show', {'id': article.id}) }}">Afficher</a>
                        </td>
                        <td>
                            <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                        </td>
                        <td>
                            <span class="badge badge-secondary">{{ article.archived ? 'oui' : 'non' }}</span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas d'article disponible...</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('.js-datatable').DataTable();
        } );
    </script>
{% endblock %}

