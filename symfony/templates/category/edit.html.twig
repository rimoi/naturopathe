{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier la category{% endblock %}

{% block body_content %}
    {% block h1 %}
        <h1>Modifier la Category</h1>
    {% endblock %}
    <hr>

    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
            <div class="col">
                {{ form_row(form.nameTranslate) }}
            </div>
            <div class="col">
                {{ form_row(form.type) }}
            </div>
        </div>
        <div class="d-flex justify-content-between mt-5">
            <div>
                {% block save %}
                    <button class="btn btn-success">{{ button_label|default('Enregister') }}</button>
                {% endblock %}
            </div>
            <div class="align-self-center">
                <a href="{{ path('category_index') }}" class="btn btn-info">< back to list</a>
            </div>
        </div>
    {{ form_end(form) }}
    <div class="mt-5 text-right">
        {% block delete %}
            {{ include('category/_delete_form.html.twig') }}
        {% endblock %}
    </div>
{% endblock %}
