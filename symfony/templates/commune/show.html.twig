{% extends 'admin/layout.html.twig' %}

{% block title %}Commune{% endblock %}

{% block body_content %}
    <h1>Commune</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commune.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ commune.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ commune.createdAt ? commune.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="admin-show">
        <div>
            <a class="btn btn-success" href="{{ path('commune_edit', {'id': commune.id}) }}">Modifier</a>
        </div>
        <div>
            {{ include('commune/_delete_form.html.twig') }}
        </div>
        <div>
            <a class="btn btn-default" href="{{ path('commune_index') }}">< Retour Ã  la liste</a>
        </div>
    </div>
{% endblock %}
