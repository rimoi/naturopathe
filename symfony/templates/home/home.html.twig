{% extends 'base.html.twig' %}

{% block title %}{{ 'home.nav.home'|trans }}{% endblock %}
{% block body_class 'site home' %}

{% block body %}
    <header class="masthead container mb-5">
{#        <div class="row">#}
{#            <div class="col-3 offset-3">#}
{#                <span class="js-counter text-white">5537</span>#}
{#            </div>#}
{#        </div>#}
        <div class="d-flex h-50 align-items-center">
            <div class="text-center">
                <img src="{{ asset('build/images/logo.svg') }}" alt="Logo Prorim" width="30%">
                <h2 class="h2 mt-n5">
                    La première plateforme de mise en contact des clients et professionnels en Mauritanie
                    <br>
                    أول منصة لربط الزبناء والمهنيين في موريتانيا
                </h2>
                {% block _search %}
                    {{ form_start(form, {'action': path('home', {'_locale': app.request.locale}), 'method': 'POST', 'attr': {'class': 'mt-5 bg-white p-5 rounded-pill border-red'}}) }}
                    <div class="row mt-2 mb-n2">
                        <div class="col-5">
                            <i class="fas fa-search text-danger"></i>
                            {{ form_widget(form.keyword, {'attr': {'class': 'w-75 input-search border-0', 'data-locale': app.request.locale}}) }}
                            <span class="text-muted">|</span>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-map-marker text-danger"></i>
                            {{ form_widget(form.location, {'attr': {'class': 'input-search border-0 js-select2 w-95', 'placeholder': 'website.view.home.index.search.input.location'}}) }}
                        </div>
                        <div class="col-3 text-right">
                            <button type="submit" class="rounded-pill w-75 input-search ml-n5 border-0 btn btn-danger" title="{{ 'website.view.home.index.search.button.title'|trans }}">{{ 'website.view.home.index.search.button.title'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                {% endblock %}
            </div>
        </div>

        {% block content %}
            {% include 'home/_category.html.twig' %}
        {% endblock %}
    </header>
{% endblock %}

